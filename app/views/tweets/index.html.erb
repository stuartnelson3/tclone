<% if @user != current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to "Unfollow", follower_connections_destroy_path(:user_id => @user), :method => :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "Follow", follower_connections_create_path(:user_id => @user), :method => :post, class: "btn btn-primary" %>
  <% end %>
<% end %>

<% if @tweets.present? %>
<h1><%= @user.user_name %>'s tweets</h1>

  <% @tweets.each do |tweet| %>
    <%= render "tweets/tweet", tweet: tweet %>
    <% if @user == current_user %>
      <p><%= link_to "delete tweet", tweet, :method => :delete, class: "btn btn-danger" %></p>
    <% end %>
  <% end %>
<% else %>
  <p>No tweets!</p>
<% end %>
