<div class="span3">
  <div class="row">
    <%= image_tag(user.gravatar_url, alt: user.user_name, class: "gravatar") %>
    <p><%= user.user_name %></p>
  <ul class="unstyled">
    <li>Tweets: <%= user.tweets_count %></li>
    <li>Followers: <%= user.followers_count %></li>
    <li>Following: <%= user.following_count %></li>
  </ul>
  <% if @users %>
    <p>here are the other users on the site:</p>
    <% @users.each do |user| %>
      <p><%= link_to "#{user.user_name}", user_tweets_path(user.user_name) %></p>
      <%= image_tag(user.gravatar_url, alt: user.user_name, class: "gravatar") %>
    <% end %>
  <% end %>
  </div>
</div>
